{
	"private": true,
	"scripts": {
		"build": "parcel build --no-cache --no-content-hash",
		"fix": "run-p 'lint:* -- --fix'",
		"lint": "run-p lint:*",
		"lint:css": "stylelint 'source/*.css'",
		"lint:js": "eslint . --ext .svelte,.js",
		"format": "prettier . --write",
		"test": "run-p lint:* build",
		"watch": "parcel watch --no-cache --no-content-hash --no-hmr",
		"prepare": "husky install"
	},
	"type": "module",
	"eslintConfig": {
		"env": {
			"browser": true,
			"webextensions": true
		},
		"plugins": [
			"svelte",
			"unicorn"
		],
		"extends": [
			"xo",
			"plugin:unicorn/recommended",
			"prettier"
		],
		"rules": {
			"unicorn/prefer-top-level-await": "off",
			"no-inner-declarations": "off",
			"no-new": "off",
			"no-bitwise": "off"
		},
		"overrides": [
			{
				"files": [
					"*.svelte"
				],
				"parser": "svelte-eslint-parser"
			}
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-xo",
			"stylelint-config-prettier"
		]
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.10.3",
		"@types/chrome": "^0.0.246",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-plugin-svelte": "^2.33.1",
		"eslint-plugin-unicorn": "^48.0.1",
		"husky": "^8.0.3",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.10.3",
		"parcel-transformer-svelte": "github:fregante/parcel-transformer-svelte#patch-1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"stylelint": "^15.10.3",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-xo": "^0.22.0",
		"svelte": "^4.2.8",
		"svelte-eslint-parser": "^0.33.0"
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"target": [
				"chromium"
			]
		}
	},
	"dependencies": {
		"webext-base-css": "^1.4.3",
		"webext-options-sync": "^4.2.1",
		"webext-polyfill-kinda": "^1.0.2"
	},
	"alias": {
		"svelte/why": "https://github.com/orlov-vo/parcel-transformer-svelte/issues/37",
		"svelte/internal": "./node_modules/svelte/src/runtime/internal/index.js"
	},
	"targets": {
		"main": false,
		"default": {
			"engines": {
				"browsers": "Chrome 110"
			},
			"source": "source/manifest.json",
			"distDir": "./distribution"
		}
	}
}
